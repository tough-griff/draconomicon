<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <h2><%= t(".heading") %></h2>
  <p><%= t(".description") %></p>
  <%= f.input :email, autofocus: true, required: true %>
  <%= f.submit t(".submit") %>
<% end %>
<%= render "devise/shared/links" %>
