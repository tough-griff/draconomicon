= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "devise", method: :put }) do |f|
  %h2= t(".heading")
  = f.hidden_field :reset_password_token
  = f.input :password, autofocus: true, required: true, hint: true
  = f.input :password_confirmation, required: true
  .form-actions
    = f.submit t(".submit"), class: "submit"
    = render "devise/shared/links"
